#!/bin/sh

docker build --force-rm -t develop ~/.config/develop
docker run \
    --restart=always \
    -d \
    -e HOST_ROOT=$HOME \
    -e NVIM_LISTEN_ADDRESS=0.0.0.0:9999 \
    -p 9999:9999 \
    --expose 9999 \
    -w $PWD \
    -v $HOME:$HOME \
    -v $HOME/.ssh:/root/.ssh \
    -v $HOME/.gitconfig:/root/.gitconfig \
    -v $HOME/.config/develop/resources:/resources \
    -v $HOME/.config/develop/gitconfig:/etc/gitconfig \
    -v $HOME/.config/develop/nvim/init.lua:/root/.config/nvim/init.lua \
    -v $HOME/.config/develop/nvim/rplugin.vim:/root/.local/share/nvim/rplugin.vim \
    -v nvim:/root/.local/share/nvim/ \
    -v project:/project \
    -v /var/run/docker.sock:/var/run/docker.sock \
    develop nvim --headless
